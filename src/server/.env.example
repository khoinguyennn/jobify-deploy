# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_strong_database_password
DB_NAME=jobify_db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=1d

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000
BASE_URL=http://localhost:5000

# Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Backend Configuration
BACKEND_URL=http://localhost:5000

# Email Configuration (Gmail SMTP)
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
# Lưu ý: EMAIL_PASSWORD phải là App Password, không phải mật khẩu Gmail thường
# Hướng dẫn tạo App Password: https://support.google.com/accounts/answer/185833

# Google Gemini AI Configuration
GEMINI_API_KEY=your_google_gemini_api_key_here
GEMINI_TOKEN=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

